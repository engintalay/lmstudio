{
  "name": "lmstudio-desktop",
  "version": "1.0.0",
  "description": "LM Studio entegrasyonlu modern masaüstü uygulaması",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron . --dev",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "LM Studio",
    "Electron",
    "AI",
    "Desktop",
    "Chat"
  ],
  "author": "LM Studio Desktop Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "pdf-parse": "^1.1.1",
    "mammoth": "^1.6.0"
  },
  "build": {
    "appId": "com.lmstudio.desktop",
    "productName": "LM Studio Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "preload.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
